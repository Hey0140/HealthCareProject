<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".NameChangeDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="160dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/petkind_selected_box"/>

        <TextView
            android:id="@+id/nameChangeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:text="닉네임 변경"
            android:textSize="17dp"/>


        <EditText
            android:id="@+id/nameChangeText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:textSize="15dp"
            android:hint="변경할 닉네임을 입력하시오."
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameChangeTitle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nameChangeButton"
            android:layout_width="280dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameChangeText"
            android:layout_marginTop="7dp"
            android:background="@color/skyblue"
            android:text="완료"
            android:textColor="@color/white"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>