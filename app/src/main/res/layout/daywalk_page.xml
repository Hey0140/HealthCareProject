<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaywalkActivity">

    <TextView
        android:id="@+id/daywalk_petmanagement"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:text="펫 관리"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/petdaywalk_Month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="11월"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/daywalk_petmanagement"
        app:layout_constraintTop_toBottomOf="@+id/daywalk_petmanagement" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/petdaywalkpageLayout"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/petdaywalk_Month">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/petdaywalk_Mon_Layout"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toLeftOf="@id/petdaywalk_Tue_Layout">

            <TextView
                android:id="@+id/petdaywalk_Mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Mon"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/petdaywalk_MonCalorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="01"
                android:textAlignment="center"
                android:textSize="35dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/petdaywalk_Mon" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/petdaywalk_Tue_Layout"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toLeftOf="@id/petdaywalk_Wed_Layout">

            <TextView
                android:id="@+id/petdaywalk_Tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Tue"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/petdaywalk_TueCalorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="02"
                android:textAlignment="center"
                android:textSize="35dp"
                app:layout_constraintTop_toBottomOf="@id/petdaywalk_Tue" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/petdaywalk_Wed_Layout"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toLeftOf="@id/petdaywalk_Thu_Layout">

            <TextView
                android:id="@+id/petdaywalk_Wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Wed"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/petdaywalk_WedCalorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="03"
                android:textAlignment="center"
                android:textSize="35dp"
                app:layout_constraintTop_toBottomOf="@id/petdaywalk_Wed" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/petdaywalk_Thu_Layout"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/petdaywalk_Thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Thu"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/petdaywalk_ThuCalorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="04"
                android:textAlignment="center"
                android:textSize="35dp"
                app:layout_constraintTop_toBottomOf="@id/petdaywalk_Thu" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/petdaywalk_Fri_Layout"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/petdaywalk_Thu_Layout">

            <TextView
                android:id="@+id/petdaywalk_Fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Fri"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/petdaywalk_FriCalorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="05"
                android:textAlignment="center"
                android:textSize="35dp"
                app:layout_constraintTop_toBottomOf="@id/petdaywalk_Fri" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/petdaywalk_Sat_Layout"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/petdaywalk_Fri_Layout">

            <TextView
                android:id="@+id/petdaywalk_Sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Sat"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/petdaywalk_SatCalorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="06"
                android:textAlignment="center"
                android:textSize="35dp"
                app:layout_constraintTop_toBottomOf="@id/petdaywalk_Sat" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/petdaywalk_Sun_Layout"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/petdaywalk_Sat_Layout">

            <TextView
                android:id="@+id/petdaywalk_Sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Sun"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/petdaywalk_SunCalorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="07"
                android:textAlignment="center"
                android:textSize="35dp"
                app:layout_constraintTop_toBottomOf="@id/petdaywalk_Sun" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/petdaywalk_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/mypage_vertical_line"
        app:layout_constraintTop_toBottomOf="@id/petdaywalkpageLayout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/daywalkpage_Text_laout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/petdaywalk_line">

        <TextView
            android:id="@+id/daywalkpage_Text_laout_1"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="- 산책 횟수"
            android:textSize="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/daywalkpage_Text_laout_2"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="- 산책 총 시간"
            android:textSize="35dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daywalkpage_Text_laout_1" />

        <TextView
            android:id="@+id/daywalkpage_Text_laout_3"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:text="- 칼로리 소모량"
            android:textSize="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daywalkpage_Text_laout_2" />

        <TextView
            android:id="@+id/daywalkpage_Text_laout_4"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="- 남은 칼로리 양"
            android:textSize="35dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daywalkpage_Text_laout_3"/>
        <TextView
            android:id="@+id/daywalkpage_Text_number_1"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="00회"
            android:textSize="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/daywalkpage_Text_number_2"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="00분"
            android:textSize="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daywalkpage_Text_number_1" />
        <TextView
            android:id="@+id/daywalkpage_Text_number_3"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="00Kcal"
            android:textSize="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daywalkpage_Text_number_2"/>
        <TextView
            android:id="@+id/daywalkpage_Text_number_4"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="00Kcal"
            android:textSize="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daywalkpage_Text_number_3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>