<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HosipitalActivity">

    <TextView
        android:id="@+id/petManagementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="pet"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hosipitalPageTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:text="병원 등록하기"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hosipitalNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:text="병원 이름"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hosipitalPageTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:text="*"
        android:textColor="@color/red"
        app:layout_constraintRight_toLeftOf="@id/hosipitalNameTitle"
        app:layout_constraintTop_toTopOf="@id/hosipitalNameTitle" />

    <View
        android:id="@+id/hosipitalNameBox"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/join_write_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hosipitalNameTitle" />

    <EditText
        android:id="@+id/hosipitalName"
        android:layout_width="334dp"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="3dp"
        android:background="@null"
        android:inputType="text"
        android:textSize="17dp"
        android:privateImeOptions="defaultInputmode=korean"
        app:layout_constraintBottom_toBottomOf="@id/hosipitalNameBox"
        app:layout_constraintLeft_toLeftOf="@id/hosipitalNameBox" />

    <TextView
        android:id="@+id/doctornameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="주치의 성함"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hosipitalNameBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:text="*"
        android:textColor="@color/red"
        app:layout_constraintRight_toLeftOf="@id/doctornameTitle"
        app:layout_constraintTop_toTopOf="@id/doctornameTitle" />

    <View
        android:id="@+id/doctornameBox"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/join_write_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doctornameTitle" />

    <EditText
        android:id="@+id/doctorname"
        android:layout_width="334dp"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="3dp"
        android:background="@null"
        android:inputType="number"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@id/doctornameBox"
        app:layout_constraintLeft_toLeftOf="@id/doctornameBox" />


    <TextView
        android:id="@+id/hosipitaladdressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="병원 주소"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doctornameBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:text="*"
        android:textColor="@color/red"
        app:layout_constraintRight_toLeftOf="@id/hosipitaladdressTitle"
        app:layout_constraintTop_toTopOf="@id/hosipitaladdressTitle" />

    <View
        android:id="@+id/hosipitaladdressBox"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/join_write_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hosipitaladdressTitle" />

    <EditText
        android:id="@+id/hosipitaladdress"
        android:layout_width="334dp"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="3dp"
        android:background="@null"
        android:inputType="text"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@id/hosipitaladdressBox"
        app:layout_constraintLeft_toLeftOf="@id/hosipitaladdressBox" />

    <TextView
        android:id="@+id/hosipitalphonenumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="병원 전화번호"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hosipitaladdressBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:text="*"
        android:textColor="@color/red"
        app:layout_constraintRight_toLeftOf="@id/hosipitalphonenumberTitle"
        app:layout_constraintTop_toTopOf="@id/hosipitalphonenumberTitle" />

    <View
        android:id="@+id/hosipitalphonenumberBox"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/join_write_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hosipitalphonenumberTitle" />

    <EditText
        android:id="@+id/hosipitalphonenumber"
        android:layout_width="334dp"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="3dp"
        android:background="@null"
        android:inputType="textPassword"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@id/hosipitalphonenumberBox"
        app:layout_constraintLeft_toLeftOf="@id/hosipitalphonenumberBox" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hosipitaljoinButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/skyblue"
        android:text="완료"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>