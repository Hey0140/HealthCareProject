<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".VaccineAddDialog">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="160dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/petkind_selected_box"/>

        <TextView
            android:id="@+id/vaccineAddTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:text="예방접종 추가"
            android:textSize="16dp"/>

        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/vaccineAddTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="6dp"
            android:background="@drawable/mypage_horizontal_line"/>

        <EditText
            android:id="@+id/vaccineAddName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vaccineAddTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:hint="종합백신 매년"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/vaccineAddButton"
            android:layout_width="280dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vaccineAddName"
            android:layout_marginTop="7dp"
            android:background="@color/skyblue"
            android:text="완료"
            android:textColor="@color/white"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>