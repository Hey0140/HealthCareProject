<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/walk_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp"
            android:text="산책시작"
            android:textSize="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/homepageTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="마이페이지"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/puppy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="반려동물 이름"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/homepageTitle"
            app:layout_constraintTop_toBottomOf="@+id/homepageTitle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/homepageLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/puppy_name">



            <View
                android:id="@+id/homepage_1"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginLeft="36dp"
                android:background="@drawable/myprofile_circle"
                android:backgroundTint="@color/whitegray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/homepage_2"
                android:layout_width="55dp"
                android:layout_height="47dp"
                android:background="@drawable/mypage_icon"
                android:backgroundTint="@color/middlegray"
                app:layout_constraintBottom_toBottomOf="@id/homepage_1"
                app:layout_constraintLeft_toLeftOf="@id/homepage_1"
                app:layout_constraintRight_toRightOf="@id/homepage_1"
                app:layout_constraintTop_toTopOf="@id/homepage_1" />

            <TextView
                android:id="@+id/change_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="4dp"
                android:text="반려동물변경"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="@+id/homepageLayout"
                app:layout_constraintTop_toBottomOf="@id/homepage_1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/homepage_cast"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="@+id/homepageLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/homepage_cast1"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="@id/homepage_cast"
                    app:layout_constraintLeft_toLeftOf="@id/homepage_cast">
                    <TextView
                        android:id="@+id/walk_number1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="산책횟수"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/walk_number2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"
                        android:text="00회"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/homepage_cast2"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    app:layout_constraintLeft_toRightOf="@id/homepage_cast1"
                    app:layout_constraintTop_toTopOf="@id/homepage_cast">
                    <TextView
                        android:id="@+id/walk_number3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="총산책시간"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/walk_number4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"
                        android:text="00분"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/homepage_cast3"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    app:layout_constraintRight_toRightOf="@id/homepage_cast1"
                    app:layout_constraintBottom_toBottomOf="@id/homepage_cast">
                    <TextView
                        android:id="@+id/walk_number5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="활동 열량"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/walk_number6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"
                        android:text="00Kcal"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/homepage_cast4"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    app:layout_constraintRight_toRightOf="@id/homepage_cast2"
                    app:layout_constraintBottom_toBottomOf="@id/homepage_cast">
                    <TextView
                        android:id="@+id/walk_number7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="필요 활동 열량"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/walk_number8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"
                        android:text="00Kcal"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>