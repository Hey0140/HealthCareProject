    <TextView
        android:id="@+id/communityItemBody4"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/communityItemTitle4"
        app:layout_constraintLeft_toLeftOf="@id/communityItemTitle4"
