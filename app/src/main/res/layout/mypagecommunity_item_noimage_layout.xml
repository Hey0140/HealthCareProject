<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <View
        android:id="@+id/communityBoxButton4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/communityItemTitle4"
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/communityBoxButton4"
        app:layout_constraintLeft_toLeftOf="@id/communityBoxButton4"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="제목이에요"
        android:textColor="@color/deepgray"
        android:textSize="14dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/communityIconLayout4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/communityBoxButton4"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/communityBoxButton4"
        app:layout_constraintBottom_toBottomOf="@id/communityBoxButton4"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/communityHeartLayoout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp">

            <View
                android:id="@+id/communityHeartButton4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/not_fill_favorite_icon"/>

            <TextView
                android:id="@+id/communityHeartNumber4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/communityHeartButton4"
                android:text="3000"
                android:textSize="10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/communityCommentLayoout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp">

            <View
                android:id="@+id/communityCommentButton4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/comment_icon"/>

            <TextView
                android:id="@+id/communityCommentNumber4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/communityCommentButton4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="3000"
                android:textSize="10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>







