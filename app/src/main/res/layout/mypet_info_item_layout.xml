<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/myPetInfoButton"
        android:layout_width="115dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/mypet_info_item_box"
        />

    <View
        android:id="@+id/myPetInfoView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/myPetInfoButton"
        app:layout_constraintBottom_toBottomOf="@id/myPetInfoButton"
        app:layout_constraintLeft_toLeftOf="@id/myPetInfoButton"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/whitegray"
        android:background="@drawable/myprofile_circle"
        />
    <ImageView
        android:id="@+id/myPetInfoProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/myPetInfoButton"
        app:layout_constraintBottom_toBottomOf="@id/myPetInfoButton"
        app:layout_constraintLeft_toLeftOf="@id/myPetInfoView"
        app:layout_constraintRight_toRightOf="@id/myPetInfoView"
        />


    <TextView
        android:id="@+id/myPetinfoName"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/myPetInfoButton"
        app:layout_constraintBottom_toBottomOf="@id/myPetInfoButton"
        app:layout_constraintLeft_toRightOf="@id/myPetInfoProfile"
        android:layout_marginLeft="15dp"
        android:text="초코"
        android:textSize="12dp"
        android:ellipsize="end"
        android:textColor="@color/deepblue"
        android:maxLines="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>