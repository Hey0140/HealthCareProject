<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthWalkActivity">

    <TextView
        android:id="@+id/monthwalk_petmanagement"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="펫 관리"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monthwalk_page_loge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="100dp"
        android:text="2023년 11월 9일의 기록"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monthwalk_page_loge_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번 달 산책일 수 00번"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthwalk_page_loge" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/monthwalk_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthwalk_page_loge" />
    <TextView
        android:id="@+id/monthwalk_Text_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="공유하기"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthwalk_RecyclerView" />

    <View
        android:id="@+id/monthwalk_Button"
        android:layout_width="15dp"
        android:layout_height="17dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/back_icon"
        app:layout_constraintRight_toLeftOf="@id/monthwalk_Text_share"
        app:layout_constraintTop_toBottomOf="@id/monthwalk_RecyclerView" />
</androidx.constraintlayout.widget.ConstraintLayout>